{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/app/*": ["./src/app/*"],
      "~/constants": ["./src/constants"],
      "~/constants/*": ["./src/constants/*"],
      "~/utils": ["./src/utils"],
      "~/utils/*": ["./src/utils/*"],
      "~/components/*": ["./src/components/*"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/customTypes": ["./src/types"],
      "~/customTypes/*": ["./src/types/*"],
      "~/lib": ["./src/lib"],
      "~/lib/*": ["./src/lib/*"],
      "~/providers/*": ["./src/providers/*"],
      "~/src/*": ["./src/*"],
      "~/assets/*": ["./assets/*"],
      "~/*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts.ts",
    "globals.d.ts",
    "webpack.config.js",
    "supabase/functions/_utils"
  ]
}
