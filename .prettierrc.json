{
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 100,
  "proseWrap": "preserve",
  "jsxSingleQuote": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^~/src/(.*)$",
    "^~/app/(.*)$",
    "^~/components/(.*)$",
    "^~/ui/(.*)$",
    "^~/hooks/(.*)$",
    "^~/providers/(.*)$",
    "^~/constants",
    "^~/customTypes",
    "^~/utils",
    "^~/lib",
    "^~/styles",
    "^~/assets",
    "^~/",
    "^[./]"
  ]
}
